{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx", "src/**/*.vue"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "build": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
