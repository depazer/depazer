{
  "include": ["src/**/*", "test/**/*", "vitest.config.*"],
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
